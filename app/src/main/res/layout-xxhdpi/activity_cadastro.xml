<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/BackgroundTheme2"
    tools:context=".test.activities.activity_cadastro">


    <ImageView
        android:id="@+id/tasksavelogo"
        style="@style/LogoCadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.387"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
                android:id="@+id/imageView"
                style="@style/ImageViewCadastro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                app:layout_constraintBottom_toTopOf="@+id/textView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/ptsans_bold"
                android:text="@string/text_view_cadastro"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="96dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent">

                <EditText
                    android:id="@+id/editTextUsuarioCadastro"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/edittext_background"
                    android:ems="10"
                    android:drawableStart="@drawable/nome_icon_svg"
                    android:drawablePadding="10dp"
                    android:autofillHints="name"
                    android:fontFamily="@font/ptsans_bold"
                    android:hint="@string/edit_text_hint_usuario"
                    android:inputType="textPersonName"
                    android:paddingStart="10dp"
                    android:paddingEnd="20dp"
                    android:textColor="#464646"
                    android:textColorHint="@color/grey3" />

                <EditText
                    android:id="@+id/editTextEmailCadastro"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginBottom="0dp"
                    android:background="@drawable/edittext_background"
                    android:drawableStart="@drawable/email_icon_svg4"
                    android:drawablePadding="10dp"
                    android:paddingStart="10dp"
                    android:ems="10"
                    android:fontFamily="@font/ptsans_bold"
                    android:hint="@string/edit_text_hint_email"
                    android:inputType="textEmailAddress"
                    android:autofillHints="emailAddress"
                    android:paddingEnd="20dp"
                    android:textColor="#464646"
                    android:textColorHint="@color/grey3" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayoutSenhaCadastro"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="32dp"
                    android:textColorHint="@color/grey3"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/grey3"
                    >

                <EditText
                    android:id="@+id/editTextSenhaCadastro"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext_background"
                    android:ems="10"
                    android:autofillHints="password"
                    android:fontFamily="@font/ptsans_bold"
                    android:hint="@string/edit_text_hint_senha"
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:drawableStart="@drawable/password_icon_svg5"
                    android:drawablePadding="10dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="20dp"
                    />

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayoutSenhaCadastro2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="32dp"
                    android:textColor="#464646"
                    android:textColorHint="@color/grey3"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/grey3"
                    >

                <EditText
                    android:id="@+id/editTextSenhaCadastro2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext_background"
                    android:ems="10"
                    android:autofillHints="password"
                    android:fontFamily="@font/ptsans_bold"
                    android:hint="@string/edit_text_hint_senha2"
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:drawableStart="@drawable/password_icon_svg5"
                    android:drawablePadding="10dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="20dp" />

                </com.google.android.material.textfield.TextInputLayout>


                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/ptsans_bold"
                    android:text="@string/text_view_senha_forte"
                    android:textSize="15sp" />


                <FrameLayout
                    android:id="@+id/framelayout1"
                    android:background="@drawable/button_colors_light"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginBottom="8dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    >
                    <TextView
                        android:id="@+id/textviewbutton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/button_cadastrar"
                        android:gravity="center"
                        android:textSize="22sp"
                        android:fontFamily="@font/ptsans_bold"
                        android:textColor="@color/white"
                        />
                    <ProgressBar
                        android:id="@+id/progressbar1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:indeterminateTint="@color/white"

                        />

                </FrameLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textViewLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="76dp"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/ptsans_bold"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="@string/text_view_login_cadastro"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

