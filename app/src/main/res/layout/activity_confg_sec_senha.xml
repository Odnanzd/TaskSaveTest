<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/BackgroundTheme2"
    tools:context=".test.activities.ActivityConfgSecSenha">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <ImageView
            android:id="@+id/imageView4"
            style="@style/Back_Button_Item2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp" /> <!-- Margem opcional -->

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ptsans_bold"
            android:text="@string/text_view_confg_sec_senha"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5" /> <!-- Centraliza horizontalmente -->

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/linearLayoutEditSenhaAntiga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        >



    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutSenhaCadastro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:textColorHint="@color/grey3"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/grey3"
        >

        <EditText
            android:id="@+id/editTextSenhaAntiga"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edittext_background"
            android:ems="10"
            android:autofillHints="password"
            android:fontFamily="@font/ptsans_bold"
            android:hint="@string/text_view_confg_sec_senha2"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:drawableStart="@drawable/password_icon_svg5"
            android:drawablePadding="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="20dp"
            />

    </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutEditSenhaNova1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutEditSenhaAntiga"
        >



        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutSenha1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:textColorHint="@color/grey3"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/grey3"
            >

            <EditText
                android:id="@+id/editTextSenha2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext_background"
                android:ems="10"
                android:autofillHints="password"
                android:fontFamily="@font/ptsans_bold"
                android:hint="@string/text_view_confg_sec_senha3"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:drawableStart="@drawable/password_icon_svg5"
                android:drawablePadding="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="20dp"
                />

        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayoutEditSenhaNova2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutEditSenhaNova1"
        >



        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutSenha2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:textColorHint="@color/grey3"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/grey3"
            >

            <EditText
                android:id="@+id/editTextSenha3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext_background"
                android:ems="10"
                android:autofillHints="password"
                android:fontFamily="@font/ptsans_bold"
                android:hint="@string/text_view_confg_sec_senha4"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:drawableStart="@drawable/password_icon_svg5"
                android:drawablePadding="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="20dp"
                />

        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>



    <FrameLayout
        android:id="@+id/framelayout1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_colors_light"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutEditSenhaNova2"
        android:focusable="true">

        <TextView
            android:id="@+id/textviewbutton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/ptsans_bold"
            android:gravity="center"
            android:text="@string/button_att"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <ProgressBar
            android:id="@+id/progressbar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminateTint="@color/white"
            android:visibility="gone"

            />

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>