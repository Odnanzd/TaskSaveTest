<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/BackgroundThemeAddAgenda2"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:src="@drawable/icon_system_update"
        app:layout_constraintEnd_toStartOf="@+id/textViewTexto3"
        app:layout_constraintHorizontal_bias="0.296"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewTextoVersao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ptsans_bold"
        android:text="TASKSAVE VERSÃO 2.1"
        style="@style/TextColorAddAgenda"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Há uma nova versão disponível."
        style="@style/TextColorAddAgenda"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/ptsans_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTextoVersao" />

    <TextView
        android:id="@+id/textViewTexto2"
        style="@style/TextColorAddAgenda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="112dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/ptsans_bold"
        android:text="-Melhorias nas notificações"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTexto1" />

    <TextView
        android:id="@+id/textViewTexto3"
        style="@style/TextColorAddAgenda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="112dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/ptsans_bold"
        android:text="-Mudanças na edição das tarefas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTexto2" />

    <TextView
        android:id="@+id/textViewTexto1"
        style="@style/TextColorAddAgenda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="112dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/ptsans_bold"
        android:text="-Melhorias no layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <FrameLayout
        android:id="@+id/framelayout1"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginStart="230dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_colors_light"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTexto3">

        <TextView
            android:id="@+id/textviewbutton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/ptsans_bold"
            android:gravity="center"
            android:text="Instalar"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <ProgressBar
            android:id="@+id/progressbar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminateTint="@color/white"
            android:visibility="gone"

            />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/framelayout2"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="90dp"
        style="@style/ButtonSelector2"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTexto3">

        <TextView
            android:id="@+id/textviewbutton2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/ptsans_bold"
            android:gravity="center"
            android:text="Não agora"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <ProgressBar
            android:id="@+id/progressbar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminateTint="@color/white"
            android:visibility="gone"

            />

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>