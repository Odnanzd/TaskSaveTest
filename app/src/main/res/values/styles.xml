<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DialogAboveKeyboard" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:textColorHint">@color/grey2</item>
        <item name="android:textColor">@color/grey2</item>

    </style>

    <style name="DialogTheme">
        <item name="android:windowEnterAnimation">@anim/animpopup</item>
        <item name="android:windowExitAnimation">@anim/animepopdown</item>
    </style>


    <style name="DialogTheme2" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:buttonTint">@color/white</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="DialogAboveKeyboard2" parent="Theme.AppCompat.Light.Dialog">
    <item name="android:windowIsFloating">true</item>
    <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:textColorHint">@color/grey2</item>
        <item name="android:textColor">@color/grey2</item>

    </style>
    <style name="BottomSheetTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle" >@style/BottomSheetStyle</item>
    </style>
    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>


</resources>